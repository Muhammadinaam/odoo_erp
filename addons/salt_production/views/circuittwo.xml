<?xml version="1.0" encoding="utf-8"?>

<odoo>

    
   <!-- TREE VIEW -->

    <record id="view_circuittwo_post_tree" model="ir.ui.view">
        <field name="name">circuittwo.post.tree</field>
        <field name="model">circuittwo.post</field>
        <field name="arch" type="xml">
            
                <tree>
                    
                       
                                <field name="crystalizer_id"/>
                                <field name="btm"/>
                                <field name="top"/>
                                <field name="height"/>
                      
                                <field name="time"/>
                                <field name="temp"/>
                                <field name="density"/>
                                <field name="remark"/>
                           
                    
                </tree>
        </field>
    </record>




   <!-- FORM VIEW  -->


    <record id="view_weather_post_form" model="ir.ui.view">
        <field name="name">circuittwo.post.form</field>
        <field name="model">circuittwo.post</field>
        <field name="arch" type="xml">
            
                <form>
                    <sheet>
                        <group>
                            <group>
                                <field name="crystalizer_id"/>
                                <field name="top"/>
                                <field name="btm"/>
                                <field name="height"/>
                                
                            </group>
                            <group>
                                <field name="time"/>
                                <field name="temp"/>
                                <field name="density"/>
                                <field name="remark"/>
                                
                            </group>
                        </group>
                    </sheet>
                </form>
            
            
        </field>
    </record>

    <record id="action_circuittwo_post" model="ir.actions.act_window">
        <field name="name"> Circuit 2 </field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">circuittwo.post</field>
        <field name="view_mode">tree,form</field>
        <field name="context">{}</field>
        <field name="help" type="html">
            <P class="o_view_nocontent_smiling_face">
                Create Today Details of Circuit 2.
            </P>

        </field>
    </record>

</odoo>
